generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Payment {
  id      String         @id @default(uuid())
  orderId String?
  amount  Float?
  method  String?
  status  PaymentStatus?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

enum PaymentStatus {
  Pending
  Success
  Failed
}
